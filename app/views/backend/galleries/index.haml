= render 'backend/shared/blocks/subnav', model: 'galleries'
= render 'backend/shared/blocks/filter', model: :galleries
- if @galleries && @galleries.length > 0
  %table.table.table-condensed.table-striped
    %thead
      %tr
        %th
        %th #
        %th Название
        %th Категория
        %th.centered Фотографий в галереи
        %th.centered
          %span.glyphicon.glyphicon-eye-open
        %th.centered
          %span.glyphicon.glyphicon-comment
        %th Дата публикации
        %th
    %tbody=render @galleries
  .help-block 
    %small
      %span.label.label-default &nbsp;&nbsp;&nbsp; 
      Не опубликовано
  = will_paginate(@posts, renderer: BootstrapPagination::Rails)
- else
  = render 'backend/shared/no_results_message'