= render 'subnav'
= render 'backend/shared/blocks/filter', model: :persons
- if @persons && @persons.length > 0
  %table.table.table-condensed.table-striped
    %thead
      %tr
        %th.col-md-1
        %th #
        %th Имя
        %th Амплуа
        %th.centered
          %span.glyphicon.glyphicon-eye-open
        %th.centered
          %span.glyphicon.glyphicon-comment
        %th
    %tbody=render partial: 'backend/persons/person', collection: @persons
  .help-block 
    %small
      %span.label.label-default &nbsp;&nbsp;&nbsp; 
      Не опубликовано  
  = will_paginate(@persons, renderer: BootstrapPagination::Rails)
- else
  = render 'backend/shared/no_results_message'