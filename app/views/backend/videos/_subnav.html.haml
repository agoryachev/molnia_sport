            %span.glyphicon.glyphicon-th-list
            = t "actions.index"
        %li{class: current_page?(new_backend_video_path) ? "active" : ""}
          %a{href: new_backend_video_path} 
            %span.glyphicon.glyphicon-pencil
            = t "actions.new"
      = render partial: "backend/shared/navbar_search_form", locals: {form_url: backend_videos_path}