= form_for([:backend, modal.new], html: {class: :form}) do |f|
  =f.hidden_field :league_id, value: hidden_fied_value, class: 'leagues-field' if hidden_fied_value.present?
  %fieldset
    .row
      .col-md-6
        .form-group
          = f.label :league_year
          = f.text_field :league_year, class: 'form-control', maxlength: 4
        .form-group
          = f.label :title
          = f.text_field :title, class: 'form-control'
  .form-actions
    = f.submit t('label.save'), class: 'btn btn-primary'