= render 'backend/shared/messages'
= form_for([:backend, @category], html: {class: :form}) do |f|
  %fieldset
    %ul.nav.nav-tabs.tabs
      %li.active
        %a{href:'#tab1', data: {toggle: 'tab'} }
          Общие
      %li
        %a{href:'#tab4', data: {toggle: 'tab'} }
          Сео
    .tab-content
      #tab1.tab-pane.active= render 'tab1', f: f
      #tab4.tab-pane= render 'backend/shared/nested/seo', f: f

  .form-actions
    = f.submit t('label.save'), class: 'btn btn-primary'
    = f.submit t("label.save_and_exit"), class: "btn btn-primary"
    = link_to "Удалить #{@category.is_published ? 'новость' : 'черновик'}", backend_category_path(@category), data: { confirm: t('msg.confirm'), method: :delete }, class: 'btn btn-danger'