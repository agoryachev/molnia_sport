= render 'subnav'
= render 'backend/shared/blocks/filter', model: :columnists
- if @columnists && @columnists.length > 0
  %table.table.table-condensed.table-striped
    %thead
      %tr
        %th.col-md-1
        %th #
        %th Имя
        %th Публикации
        %th.centered
          %span.glyphicon.glyphicon-eye-open
        %th
    %tbody=render partial: 'backend/columnists/columnist', collection: @columnists
  .help-block 
    %small
      %span.label.label-default &nbsp;&nbsp;&nbsp; 
      Не опубликовано  
  = will_paginate(@columnists, renderer: BootstrapPagination::Rails)
- else
  = render 'backend/shared/no_results_message'