= render 'subnav'
- if @comments && @comments.length > 0
  %table.table.table-condensed.table-striped
    %thead
      %tr
        %th
    %tbody= render partial: 'backend/comments/comment', collection: @comments
  %hr
  .help-block 
    %small
      %span.label &nbsp;&nbsp;&nbsp; 
      Не опубликовано  
  = will_paginate(@comments, renderer: BootstrapPagination::Rails)
- else
  = render 'backend/shared/no_results_message'