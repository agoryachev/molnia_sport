- if @total
  %br/ 
  .result_message.alert.alert-info
    %button.close{type:"button", data: {dismiss: "alert"}}×
    %i.icon-search
    Найдено #{@total} записей
%h3= t "controllers.backend.#{controller.controller_name}"
.subnav
  .navbar.navbar-default
    .navbar-inner
      %ul.nav.navbar-nav
        %li{class: current_page?(backend_comments_path) ? "active" : ""}
          %a{href: backend_comments_path} 
            %span.glyphicon.glyphicon-th-list
            = t "actions.index"
      = form_tag(backend_comments_path, method: :get, class: "navbar-form navbar-right") do
        .form-group
          = text_field_tag "filter[from]", nil,value: (params["filter"]["from"] rescue nil), class: 'form-control datepicker', placeholder: "начальная дата"
        .form-group
          = text_field_tag "filter[to]", nil,value: (params["filter"]["to"] rescue nil), class: 'datepicker form-control', placeholder: "конечная дата"
        %button.btn.btn-primary{type:"submit"}
          %span.glyphicon.glyphicon-search
      .clearfix