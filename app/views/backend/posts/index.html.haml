= render 'backend/shared/blocks/subnav', model: 'posts'
= render 'backend/shared/blocks/filter', model: :posts
- if @posts && @posts.length > 0
  %table.table.table-condensed.table-striped
    %thead
      %tr
        %th
        %th #
        %th Новость
        %th Категория
        %th Страна
        %th Дата публикации
        %th.centered
          %span.glyphicon.glyphicon-eye-open
        %th.centered
          %span.glyphicon.glyphicon-comment
        %th.manage
    %tbody=render @posts
  .help-block 
    %small
      %span.label.label-default &nbsp;&nbsp;&nbsp; 
      Не опубликовано  
    = will_paginate(@posts, renderer: BootstrapPagination::Rails)
- else
  = render 'backend/shared/no_results_message'