%h3=t("controllers.backend.#{controller.controller_name}")
= render 'subnav', model: 'leagues'
= render 'filter'

/ breadcrumbs
.panel.panel-default.filter
  .panel-body
    %ol.breadcrumb{style: 'margin-bottom: 1px;'}
      %li=link_to 'Страны', backend_countries_path
      %li.active Лиги
/ end breadcrumbs

- if @leagues && @leagues.length > 0
  %table.table.table-condensed.table-striped
    %thead
      %tr
        %th #
        %th.centered Кол-во туров
        %th Заголовок
        %th Категория
        %th Страна
        %th.centered
          %span.glyphicon.glyphicon-eye-open
        %th.centered
          %span.glyphicon.glyphicon-comment
        %th
    %tbody=render @leagues
  .help-block 
    %small
      %span.label.label-default &nbsp;&nbsp;&nbsp; 
      Не опубликовано  
  = will_paginate(@leagues, renderer: BootstrapPagination::Rails)
- else
  = render 'backend/shared/no_results_message'