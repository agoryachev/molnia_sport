= form_for(resource, as: resource_name, url: session_path(resource_name), html:{class: 'form-signin'}) do |f|
  %h2.form-signin-heading Вход
  = f.text_field :nickname, placeholder: 'Имя пользователя', class: 'form-control'
  = f.password_field :password, placeholder: 'Пароль', class: 'form-control'
  - if devise_mapping.rememberable?
    = f.label :remember_me, class: 'checkbox' do
      = f.check_box :remember_me
      Запомнить меня
  .clearfix
  = f.submit 'Войти на сайт', class: 'btn btn-lg btn-primary btn-block'