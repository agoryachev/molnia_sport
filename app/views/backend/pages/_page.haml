%tr{class: page.is_published? ? '' : :muted, data: {id: page.id}}
  %td= page.id
  %td= link_to page.title, edit_backend_page_path(page)
  %td.centered=render "backend/shared/blocks/publish_checkbox", model: page, field: :is_published
  %td.centered=render "backend/shared/blocks/publish_checkbox", model: page, field: :is_comments_enabled
  %td=render "backend/shared/blocks/delete_edit_buttons", model: page