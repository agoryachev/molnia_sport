= render 'backend/shared/messages'
.container-content
  = form_for([:backend, @character], html: {class: "form"}) do |f|
    %fieldset
      .row
        .col-md-6
          .form-group
            = f.label :title
            = f.text_field :title, class: 'form-control', maxlength: 255
    
    .form-actions
      = f.submit t('label.save'), class: 'btn btn-primary'
      = f.submit t("label.save_and_exit"), class: "btn btn-primary"
      = link_to "Удалить амплуа", backend_character_path(@character), data: { confirm: t('msg.confirm'), method: :delete }, class: 'btn btn-danger'if @character.persisted?