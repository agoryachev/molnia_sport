= render 'backend/shared/blocks/subnav', model: 'matches'
= render 'backend/shared/blocks/filter', model: :matches
- if @matches && @matches.length > 0
  %table.table.table-condensed.table-striped
    %thead
      %tr
        %th #
        %th Название матча
        %th.centered Играющие команды
        %th.centered Очки
        %th.centered Начало матча
        %th.centered Окончание матча
        %th.centered
          %span.glyphicon.glyphicon-eye-open
        %th
    %tbody=render @matches
  .help-block 
    %small
      %span.label.label-default &nbsp;&nbsp;&nbsp; 
      Не опубликовано  
  = will_paginate(@matches, renderer: BootstrapPagination::Rails)
- else
  = render 'backend/shared/no_results_message'