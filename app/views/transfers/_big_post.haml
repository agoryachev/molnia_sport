%article.big_post
  .post_inf
    %p.fll
      %time{datetime: post.published_at}=d(post.published_at)
  %h3=link_to post.title, category_post_path(post.category, post)
  =link_to category_post_path(post.category, post), class: :img do
    =show_main_image(post, '300x200', post.title)
  %p=raw truncate(post.content, length: 300)
  %p.detail=link_to 'Читать полностью', category_post_path(post.category, post)