= form_for(current_user, url: registration_path(resource_name), html: { method: :put, class: :sign_in_form }) do |f|
  %h2 Редактирование
  .show_errors

  %fieldset._150.fl
    = f.label :name_first
    %br/
    = f.text_field :name_first, value: current_user.name_first
  %fieldset._150.fl.name_last_fieldset
    = f.label :name_last
    %br/
    = f.text_field :name_last, value: current_user.name_last

  %fieldset._150.fr
    = f.label :name_v
    %br/
    = f.text_field :name_v, value: current_user.name_last

  %fieldset._618
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, value: current_user.email
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %fieldset
      Ожидается подтверждения для: #{resource.unconfirmed_email}


  %fieldset._300.fl
    = f.label :password
    %br/
    = f.password_field :password, autocomplete: 'off'
  %fieldset._300.fr
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  %fieldset._618
    = f.label :current_password
    %i (для внесения изменений нужен текущий пароль)
    %br/
    = f.password_field :current_password
  %fieldset= f.submit "Готово", class: :submit_registration