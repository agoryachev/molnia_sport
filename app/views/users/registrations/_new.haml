= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: :sign_in_form}) do |f|
  %h2 Регистрация
  .show_errors
  %fieldset._300.fl
    = f.label :name_first
    %br/
    = f.text_field :name_first
  %fieldset._300.fr
    = f.label :name_last
    %br/
    = f.text_field :name_last
  %fieldset._300.fl
    = f.label :password
    %br/
    = f.password_field :password
  %fieldset._300.fr
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  %fieldset._618
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true
  %fieldset
    = f.submit 'Готово', class: :submit_registration
%p.sign_in_text Уже есть логин на сайте Sportcup? #{link_to 'Войти', new_registration_path(resource_name), class: 'show_login_form'}