%header
  .wrap
    =link_to '/', class: :logo do
      =image_tag 'logo-sport.png'
    =link_to 'RSS', '/rss.xml', style: "display: none;"
    =render 'shared/users/users_header_menu'
    =render 'shared/nav'
    %p.time_pad.bg_grad
      %span.date_val
        %time
          =Russian::strftime(Time.now, "%d %b %Y, %A")
      %span.time_val=Russian::strftime(Time.now,"%H:%M")

=content_for :templates do
  #registration-modal.modal-content{style: "display: none;"}
    .modal-header
      %button.close{onclick: "$.fn.custombox('close');", type: "button"} &times;
      %h2 Быстрая регистрация
      =link_to user_omniauth_authorize_path(:twitter), class: 'btn-social btn-twitter' do
        %span.fa.fa-twitter
        %span.text Twitter
      
      =link_to user_omniauth_authorize_path(:facebook), class: 'btn-social btn-facebook' do
        %span.fa.fa-facebook
        %span.text Facebook

      =link_to user_omniauth_authorize_path(:vkontakte), class: 'btn-social btn-vk' do
        %span.fa.fa-vk
        %span.text Вконтакте
    .modal-body